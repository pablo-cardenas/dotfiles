[module/filesystem]
type = internal/fs

mount-0 = /
mount-1 = /home

interval = 10
fixed-values = true
spacing = 2
label-mounted = %mountpoint%(%used%/%free%)

[module/xkeyboard]
type = internal/xkeyboard

[module/uptime]
type = custom/script
exec = uptime | sed -r "s/^.*up (.*),  [0-9]* user.*$/\1/" | sed -r "s/  / /"
interval = 100
label = UP %output%

[settings]
screenchange-reload = true

[global/wm]
margin-top = 0
margin-bottom = 0


